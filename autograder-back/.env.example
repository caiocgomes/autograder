# Database Configuration
DATABASE_URL=postgresql://autograder:autograder@localhost:5432/autograder

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# JWT Configuration
JWT_SECRET_KEY=your-secret-key-here-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=15
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Security
BCRYPT_COST_FACTOR=12
RATE_LIMIT_FAILED_LOGINS=5
RATE_LIMIT_WINDOW_MINUTES=15

# Email Configuration (for password reset)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@autograder.com

# LLM API Configuration
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key
LLM_PROVIDER=openai  # or anthropic

# Sandbox Execution
DOCKER_IMAGE_SANDBOX=autograder-sandbox:latest
SANDBOX_TIMEOUT_SECONDS=30
SANDBOX_MEMORY_LIMIT_MB=512
SANDBOX_CPU_LIMIT=1

# File Upload Limits
MAX_EXERCISE_FILE_SIZE_MB=10
MAX_SUBMISSION_FILE_SIZE_MB=1

# Environment
ENVIRONMENT=development  # development, staging, production
DEBUG=true
